{
  "openapi": "3.0.0",
  "info": {
    "title": "My-Backend API",
    "version": "1.0",
    "description": "APIs for HRMS Application"
  },
  "paths": {
    "/records/post": {
      "post": {
        "summary": "Create a new record",
        "description": "Creates a new record with name and age fields.",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "name": { "type": "string" },
                  "age": { "type": "number" }
                },
                "required": ["name", "age"]
              }
            }
          }
        },
        "responses": {
          "200": { "description": "Record created successfully" },
          "400": { "description": "Validation error" }
        }
      }
    },

    "/records/getAll": {
      "get": {
        "summary": "Get all records",
        "description": "Retrieves all documents from the database.",
        "responses": {
          "200": { "description": "List of all records" }
        }
      }
    },

    "/records/getOne/{id}": {
      "get": {
        "summary": "Get a record by ID",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "description": "MongoDB document ID",
            "schema": { "type": "string" }
          }
        ],
        "responses": {
          "200": { "description": "Record fetched successfully" },
          "404": { "description": "Record not found" }
        }
      }
    },

    "/records/update/{id}": {
      "patch": {
        "summary": "Update a record by ID",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": { "type": "string" }
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "name": { "type": "string" },
                  "age": { "type": "number" }
                }
              }
            }
          }
        },
        "responses": {
          "200": { "description": "Record updated successfully" },
          "400": { "description": "Error updating record" }
        }
      }
    },

    "/records/delete/{id}": {
      "delete": {
        "summary": "Delete a record by ID",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": { "type": "string" }
          }
        ],
        "responses": {
          "200": { "description": "Record deleted successfully" },
          "400": { "description": "Error deleting record" }
        }
      }
    },

    "/todos": {
      "post": {
        "summary": "Create a new Todo",
        "description": "Creates a new todo item with title and completed fields.",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "title": { "type": "string", "example": "Buy groceries" },
                  "completed": { "type": "boolean", "example": false }
                },
                "required": ["title", "completed"]
              }
            }
          }
        },
        "responses": {
          "201": { "description": "Todo created successfully" },
          "400": { "description": "Invalid input data" }
        }
      },
      "get": {
        "summary": "Get all Todos",
        "description": "Returns a list of all todo items.",
        "responses": {
          "200": { "description": "List of todos returned" },
          "500": { "description": "Server error" }
        }
      }
    },

    "/todos/completed": {
      "get": {
        "summary": "Get todos by completed status",
        "description": "Fetches todos based on completed status. Use ?completed=true or ?completed=false",
        "parameters": [
          {
            "name": "completed",
            "in": "query",
            "required": true,
            "schema": { "type": "string", "enum": ["true", "false"] },
            "description": "Filter todos by completed status"
          }
        ],
        "responses": {
          "200": { "description": "Filtered todos returned" },
          "500": { "description": "Server error" }
        }
      }
    },

    "/todos/{id}": {
      "delete": {
        "summary": "Delete a Todo by ID",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": { "type": "string" },
            "description": "MongoDB Todo ID"
          }
        ],
        "responses": {
          "200": { "description": "Todo deleted successfully" },
          "404": { "description": "Todo not found" },
          "500": { "description": "Server error" }
        }
      },

      "patch": {
        "summary": "Update a Todo partially",
        "description": "Updates one or more fields of a todo item.",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": { "type": "string" }
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "title": { "type": "string", "example": "Pay bills" },
                  "completed": { "type": "boolean", "example": true }
                }
              }
            }
          }
        },
        "responses": {
          "200": { "description": "Todo updated successfully" },
          "404": { "description": "Todo not found" },
          "400": { "description": "Bad request" }
        }
      },

      "put": {
        "summary": "Replace an entire Todo",
        "description": "Updates the full todo object.",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": { "type": "string" }
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "title": { "type": "string", "example": "Read a book" },
                  "completed": { "type": "boolean", "example": false }
                },
                "required": ["title", "completed"]
              }
            }
          }
        },
        "responses": {
          "200": { "description": "Todo replaced successfully" },
          "404": { "description": "Todo not found" },
          "400": { "description": "Bad input" }
        }
      }
    }
  }
}
